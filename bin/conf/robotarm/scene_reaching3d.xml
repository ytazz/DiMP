<?xml version="1.0" encoding="utf-8"?>

<namespace name="workspace">
  
  <import name="robot0" filename="pa10/pa10.xml"/>
 
  <vmat name="mat_target" colorname="blue"/>
  <sphere   name="sphere_target"   radius="0.05"/>
  <cylinder name="cylinder_target" radius="0.01" height="0.5"/>
  
  <body name="body_target0" dynamical="false" trn="0.9 0.9 0.5" rot="45deg@z">
    <connector name="0" rot="90deg@x"/>
  </body>
  <body name="body_target1" dynamical="false" trn="0.4 0.5 0.4" rot="0deg@x">
    <connector name="0" rot="90deg@x"/>
  </body>
  <body name="body_target2" dynamical="false" trn="-0.4 0.5 0.4">
    <connector name="0" rot="90deg@x"/>
  </body>
  
  <!-- 以下TRO rev1,2,3設定
  <body name="body_target0" dynamical="false" trn="1.0 1.0 0.5" rot="45deg@x">
    <connector name="0"/>
  </body>
  <body name="body_target1" dynamical="false" trn="0.5 0.25 0.6" rot="90deg@y">
    <connector name="0"/>
  </body>
  <body name="body_target2" dynamical="false" trn="-0.4 0.25 0.2">
    <connector name="0"/>
  </body>
  -->

  <attach connector="body_target0/0" shape="cylinder_target" vmat="mat_target"/>
  <attach connector="body_target1/0" shape="cylinder_target" vmat="mat_target"/>
  <attach connector="body_target2/0" shape="cylinder_target" vmat="mat_target"/>
  
  <vmat name="mat_obstacle" colorname="lightpink"/>
  <cylinder name="cylinder_obstacle" radius="0.2" height="0.5"/>
  <body name="body_obstacle0" dynamical="false" trn="-0.05 0.25 0.6">
    <connector name="0" rot="90deg@x"/>
  </body>
  <attach connector="body_obstacle0/0" shape="cylinder_obstacle" vmat="mat_obstacle"/>

  <ticks time_begin="0.0" time_step="0.25" time_end="5.0"/>
  <timeslot name="timeslot0" time_begin="1.45" time_end="1.55" locked="true"/>
  <timeslot name="timeslot1" time_begin="2.95" time_end="3.05" locked="true"/>
  <timeslot name="timeslot2" time_begin="4.7"  time_end="4.8"  locked="true"/>
  <task name="task0"  type="match" obj0="workspace/robot0/body_link6" obj1="workspace/body_target0"   timeslot="timeslot0" enable_pos="true" enable_ori="true" enable_vel="true" enable_angvel="true"/>
  <task name="task1"  type="match" obj0="workspace/robot0/body_link6" obj1="workspace/body_target1"   timeslot="timeslot1" enable_pos="true" enable_ori="true" enable_vel="true" enable_angvel="true"/>
  <task name="task2"  type="match" obj0="workspace/robot0/body_link6" obj1="workspace/body_target2"   timeslot="timeslot2" enable_pos="true" enable_ori="true" enable_vel="true" enable_angvel="true"/>
  <task name="avoid0" type="avoid" obj0="workspace/robot0/body_link0" obj1="workspace/body_obstacle0"/>
  <task name="avoid1" type="avoid" obj0="workspace/robot0/body_link1" obj1="workspace/body_obstacle0"/>
  <task name="avoid2" type="avoid" obj0="workspace/robot0/body_link2" obj1="workspace/body_obstacle0"/>
  <task name="avoid3" type="avoid" obj0="workspace/robot0/body_link3" obj1="workspace/body_obstacle0"/>
  <task name="avoid4" type="avoid" obj0="workspace/robot0/body_link4" obj1="workspace/body_obstacle0"/>
  <task name="avoid5" type="avoid" obj0="workspace/robot0/body_link5" obj1="workspace/body_obstacle0"/>
  <task name="avoid6" type="avoid" obj0="workspace/robot0/body_link6" obj1="workspace/body_obstacle0"/>
  <scaling T="0.25" L="0.5" M="1.0"/>
  <enable   id="object_c1t" enable="false"/>
  <enable   id="object_c1r" enable="false"/>
  <priority id="avoid_p"    level="1"/>
  <priority id="avoid_v"    level="1"/>
  <priority id="match_tp"   level="2"/>
  <priority id="match_rp"   level="2"/>
  <priority id="match_tv"   level="2"/>
  <priority id="match_rv"   level="2"/>
  <priority id="joint_range_v" level="3"/>
  <iteration level="0" num="30"/>
  <iteration level="1" num="1"/>
  <iteration level="2" num="1"/>
  <iteration level="3" num="1"/>
  <correction rate="0.5" limit="1.0"/>
  <correction id="avoid_p"    rate="0.5"  limit="1.0" />
  <correction id="avoid_v"    rate="0.5"  limit="1.0" />
  <correction id="match_tp"   rate="0.5"  limit="1.0" />
  <correction id="match_rp"   rate="0.5"  limit="1.0" />
  <correction id="match_tv"   rate="0.5"  limit="1.0" />
  <correction id="match_rv"   rate="0.5"  limit="1.0" />
  <correction id="joint_range_v" rate="0.05" limit="0.05"/>

</namespace>
