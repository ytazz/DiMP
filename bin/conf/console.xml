<?xml version="1.0"?>
<console
  play_speed = "0.25"
  >
  <rendering
    timer_period          = "50"
    world_bound           = "300.0"
    console_font_size     = "12"
    console_pos_x         = "0"
    console_pos_y         = "0"
    console_width         = "110"
    console_height        = "55"
    console_message_row   = "0"
    console_message_col   = "55"
    console_message_depth = "50"
    console_input_row     = "53"
    >
  </rendering>

  <window_manager
    window_pos_x  = "800"
    window_pos_y  = "60"
    window_width  = "1600"
    window_height = "1200"
    window_title  = "DiMP Console">
    <window
      split       = "1 2"
      row_ratio   = "100%"
      col_ratio   = "100% 100"
      frame_color = "black"
      back_color  = "white"
      font_face   = "msgothic.ttc"
      font_size   = "24">
      <import filename="conf/viewer.xml"/>
      <import filename="conf/panel.xml"/>
    </window>  
  </window_manager>

</console>
