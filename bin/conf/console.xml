<?xml version="1.0"?>
<console>
  <rendering
    timer_period          = "50"
    world_bound           = "300.0"
    console_font_size     = "12"
    console_pos_x         = "0"
    console_pos_y         = "0"
    console_width         = "180"
    console_height        = "100"
    console_message_row   = "0"
    console_message_col   = "60"
    console_message_depth = "50"
    console_input_row     = "98"
    >
  </rendering>

  <window_manager
    window_width  = "1600"
    window_height = "900"
    window_title  = "DiMP Console">
    <window
      split       = "1 2"
      row_ratio   = "100%"
      col_ratio   = "100% 300"
      frame_color = "black"
      back_color  = "white"
      font_face   = "msgothic.ttc"
      font_size   = "24">
      <import filename="conf/viewer.xml"/>
      <import filename="conf/panel.xml"/>
    </window>  
  </window_manager>

</console>
